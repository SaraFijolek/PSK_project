@page
@model WebApplication1.Pages.BinaryDistributionServiceModel
@{
    ViewData["Title"] = "Rozkład Dwupunktowy";
}

<div class="container mt-5">
    <h1 class="mb-4">Analiza statystyczna – Rozkład Dwupunktowy</h1>

    <!-- Sekcja teorii -->
    <div class="card mb-4 shadow-sm">
        <div class="card-body">
            <h2 class="h5">Teoria</h2>
            <p>
                Rozkład dwupunktowy (Bernoulliego) to dyskretny rozkład prawdopodobieństwa,
                który przyjmuje tylko dwie wartości: <strong>0</strong> i <strong>1</strong>.
                Parametr <code>p</code> określa prawdopodobieństwo uzyskania wartości <code>1</code>.
            </p>
            <ul>
                <li>P(1) = p &rarr; prawdopodobieństwo sukcesu</li>
                <li>P(0) = 1 - p &rarr; prawdopodobieństwo porażki</li>
            </ul>
            <p>Przykładowo dla <code>p = 0.3</code>:</p>
            <ul>
                <li>P(1) = 0.3 (30% szans na uzyskanie 1)</li>
                <li>P(0) = 0.7 (70% szans na uzyskanie 0)</li>
            </ul>
        </div>
    </div>

    <!-- Sekcja generatora -->
    <div class="card shadow-sm">
        <div class="card-body">
            <h2 class="h5 mb-3">Generowanie serii Bernoulliego</h2>
            <form method="post">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label asp-for="Length" class="form-label">Liczba powtórzeń</label>
                        <input asp-for="Length" type="number" min="1" class="form-control" />
                    </div>
                    <div class="col-md-4">
                        <label asp-for="P" class="form-label">Parametr p (0…1)</label>
                        <input asp-for="P" type="number" step="0.01" min="0" max="1" class="form-control" />
                    </div>
                </div>
                <div class="mt-4 text-end">
                    <button type="submit" class="btn btn-primary px-4">Generuj</button>
                </div>
            </form>

            @if (Model.ErrorMessage is not null)
            {
                <div class="alert alert-danger mt-3">@Model.ErrorMessage</div>
            }
            else if (Model.GeneratedSeries != null)
            {
                <div class="alert alert-success mt-3">
                    <h5 class="alert-heading">Wyniki:</h5>
                    <p>Wygenerowana seria: <strong>@string.Join(", ", Model.GeneratedSeries)</strong></p>
                </div>
            }
        </div>
    </div>
</div>
